<div class="container">
    <h1>EAT-DA-BURGER</h1>

    <div class="add">
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="burgerName">
        </div>

        <button type="submit">Add Burger</button>
    </form>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><h2>Dont let these burgers go to waste!!</h2></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if this.devoured }}
                                <p>Burgers : {{ this.burger_name }}
                                <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{true}}">
                                    {{#if devoured}}Devour!{{else}}More{{/if}}
                                </button></p>
                                <br/>
                                {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>    
        </div>
  
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><h2>YOU ATE ALL THESE BURGERS!!</h2></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless this.devoured}}
                                <p>Burgers : {{this.burger_name }}</p>
                                <br/>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>    
            </div>   
        </div>
    </div>
</div>


</div>